mouse-hide-while-typing = false

# background-opacity = 0.85
# background-blur-radius = 15

# Workaround bug https://github.com/ghostty-org/ghostty/discussions/5018
keybind = ctrl+left_bracket=text:\x1b

# Quick terminal
# keybind = global:ctrl+grave_accent=toggle_quick_terminal
# keybind = ctrl+shift+escape=toggle_quick_terminal
quick-terminal-animation-duration = 0.2

macos-option-as-alt = right

copy-on-select = false


# Search Scrollback https://github.com/ghostty-org/ghostty/issues/189
keybind = super+shift+j=write_screen_file:paste
keybind = super+alt+shift+j=write_screen_file:open

# To enter newlines with Shift+Enter
# https://github.com/anthropics/claude-code/issues/1282
keybind = shift+enter=text:\n
